<table>
  <thead>
    <tr>
      <th><%= Quiz.human_attribute_name(:title) %></th>
      <th><%= Quiz.human_attribute_name(:description) %></th>
      <th colspan="3"><%= t('actions.title') %></th>
    </tr>
  </thead>
  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.description %></td>
        <td>
          <%= link_to t('actions.show'), quiz_path(quiz) %>
          <%= link_to t('actions.edit'), edit_quiz_path(quiz) %>
          <%= link_to t('actions.destroy'), quiz_path(quiz),  method: :delete, data: { confirm: t('are_you_sure') } %>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to t('quizzes.new_quiz'), new_quiz_path %>
</p>
