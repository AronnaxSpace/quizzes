<table>
  <thead>
    <tr>
      <th><%= t "title" %></th>
      <th><%= t "description" %></th>
      <th colspan="3"><%= t "action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.description %></td>
        <td>
          <%= link_to t('actions.quizzes.show'), quiz_path(quiz) %>
          <%= link_to t('actions.quizzes.edit'), edit_quiz_path(quiz) %>
          <%= link_to t('actions.quizzes.destroy'), quiz_path(quiz),  method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to t('actions.quizzes.new'), new_quiz_path %>
</p>
