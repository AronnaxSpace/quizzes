<% if @quiz.errors.any? %>
  <h2><%= t 'problem' %></h2>
  <ul>
    <% @quiz.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @quiz, local: true) do |f| %>
  <p>
    <%= f.label t('title') %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label t('description') %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
