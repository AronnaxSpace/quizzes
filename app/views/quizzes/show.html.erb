
<div class="p-6 shadow-lg rounded-lg bg-gray-100 text-gray-700">
  <h2 class="font-semibold text-3xl mb-5"><%= @quiz.title %></h2>
  <p>
    <%= @quiz.description %>
  </p>
  <hr class="my-6 border-gray-300" />
  <% @questions.each_with_index do |question, index| %>
    <p><strong><%= index + 1 %>. <%= question.content %></strong></p>
    <% if question.answers.instance_of? Array %>
      <% question.answers.each do |answer| %>
        <input type="radio">
        <label><%= answer["answer"] %></label><br>
      <% end %>
    <% end %>
    <%= link_to t("actions.destroy"), quiz_question_path(question.quiz, question),  method: :delete, data: { confirm: t("are_you_sure") }, class:"inline-block px-3 py-2 bg-red-600 text-white text-xs leading-tight uppercase rounded-full shadow-md hover:bg-red-700 hover:shadow-lg focus:bg-red-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-800 active:shadow-lg transition duration-150 ease-in-out" %>

  <% end %>
</div>

